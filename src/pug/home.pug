extends template/site
block title
    title Home | Static Web Starter Kit
block main
    .container-fluid
        .main.row
            .col.d-flex.flex-column.justify-content-center.align-items-center
                h1 Static Web Starter Kit
                h3 PUG, SCSS, POSTCSS, ES6, ESLINT, STYLELINT, WEBPACK
                -
                    var logos = [
                            'pugjs.svg',
                            'sass.png',
                            'postcss.png',
                            'babel.png',
                            'es6.png',
                            'eslint.png',
                            'stylelint.png',
                            'webpack.svg'
                    ];
                ul.logo-list.d-flex.flex-row.justify-content-center.align-items-center.flex-wrap
                    each logo in logos
                        li.logo-item: img(src="images/"+logo)
                button(type="button"
                        class="btn btn-lg btn-danger"
                        data-toggle="popover"
                        title="Popover title"
                        data-content="And here's some amazing content. It's very engaging. Right?") Click to toggle popover
